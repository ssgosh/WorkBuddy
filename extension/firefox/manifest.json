{
  "manifest_version": 2,
  "name": "WorkBuddy",
  "version": "1.0",
  "description": "Redirects to a block page when the button is clicked.",
  "permissions": [
    "activeTab",
    "http://localhost:5000/*",
    "http://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
